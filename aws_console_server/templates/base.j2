<!DOCTYPE html>
<html lang="en">
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous">
<title>AWS Web Console</title>
</head>
<body>

{% block heading %}
     <div class="container">
            <div class="row">
                <div class="col-6"><h1>AWS Web Console</h1></div>
                <div class="col-6">
                    {% if session['user'] is defined %}
                        User {{ session['user'] }} | <a href="/logout">Logout</a>
                    {% else %}
                        <a href="/login">Login</a>
                    {% endif %}
                </div>
            </div>
    </div>
{% endblock %}

{% block messages %}
    {%  if msg_alert is defined and msg_alert is string %}
        <div class="alert alert-danger" role="alert">{{ msg_alert }}</div>
    {% endif %}

    {%  if msg_info is defined and msg_info is string%}
        <div class="alert alert-success" role="alert">{{ msg_info }}</div>
    {% endif %}
{% endblock %}

{% block content %}
{% endblock %}

</body>
</html>
